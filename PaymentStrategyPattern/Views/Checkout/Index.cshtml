@model OrderDetails

@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 fw-semibold border-bottom pb-2">Checkout</h2>
            <form asp-action="ProcessPayment" method="post" class="needs-validation">
                <div class="form-floating mb-3">
                    <input type="text" asp-for="CustomerName" class="form-control" id="name" placeholder="Full Name" required>
                    <label for="name">Full Name</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="tel" asp-for="CustomerPhone" class="form-control" id="phone" placeholder="Phone Number" required>
                    <label for="phone">Phone Number</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" asp-for="CustomerAddress" class="form-control" id="address" placeholder="Address" required>
                    <label for="address">Address</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="number" asp-for="Amount" class="form-control" id="amount" placeholder="Amount" step="0.01" required>
                    <label for="amount">Amount</label>
                </div>

                <div class="mb-4">
                    <label class="form-label">Payment Gateway</label>
                    <select name="gateway" class="form-select" required>
                        <option value="">Select a gateway</option>
                        @foreach (var g in ViewBag.Gateways)
                        {
                            <option value="@g">@g</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-dark w-100 py-2">Pay Now</button>
            </form>
        </div>
    </div>
</div>
