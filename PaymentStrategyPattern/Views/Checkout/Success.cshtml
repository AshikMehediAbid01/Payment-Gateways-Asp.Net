@model PaymentStrategyPattern.Models.PaymentResult

@{
    ViewData["Title"] = "Payment Success";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-success text-center fs-4 fw-semibold shadow-sm">
                ✅ Payment Successful
            </div>

            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-success">Transaction Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-3 fw-bold">Success</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Success)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 fw-bold">Transaction ID</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.TransactionId)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 fw-bold">Message</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Message)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 fw-bold">Amount</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Amount)
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
            </div>
        </div>
    </div>
</div>
